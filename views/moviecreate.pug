extends layout
block content
 h1(style='background-color:aqua;text-align:center')= title
 form(id='MovieForm', action="/resource/movie", method="POST")
  div(class='row moviestyle').form-group
   label(class='col-sm-2 col-form-label' style='font-size:20px').moviestyle(for='movie_Name') Movie Name
   input#movie_Name(class='form-control' type='text', name='movie_Name')
  div(class='row moviestyle').form-group
   label(class='col-sm-2 col-form-label' style='font-size:20px').moviestyle(for='movie_Genre') Movie Genre
   input#movie_Genre(class='form-control' type='text', name='movie_Genre')
  div(class='row moviestyle').form-group
   label(class='col-sm-2 col-form-label' style='font-size:20px').moviestyle(for='Rating') Rating
   input#Rating(class='form-control' type='number', name='Rating')
  div.moviestyle
   input(class='btn btn-primary' style='align:center' type="submit")
  
 script.
